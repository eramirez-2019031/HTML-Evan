document.addEventListener("DOMContentLoaded", function () {
    
    const imagenesFondo = [
        "url('ruta/imagen1.jpg')",
        "url('ruta/imagen2.jpg')",
        "url('ruta/imagen3.jpg')",
        
    ];

    
    const intervaloTiempo = 5000; 
    let indiceImagen = 0;

    function cambiarFondo() {
        document.body.style.backgroundImage = imagenesFondo[indiceImagen];
        indiceImagen = (indiceImagen + 1) % imagenesFondo.length;
    }

    
    cambiarFondo();

    
    setInterval(cambiarFondo, intervaloTiempo);
});
